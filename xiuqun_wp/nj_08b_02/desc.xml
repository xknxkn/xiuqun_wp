		<part part_index="0" name="Water talk" page="17">
			<record rec_id="0" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="1" rec_time="3" name="Daisy was in the bathroom." sound="nj_08b_02.mp3" from="   0:11.375" to="  0:13.801" allWordsNum="5"/>
			<subrecord rec_id="2" rec_time="5" name="She was brushing her teeth and tap was on." sound="nj_08b_02.mp3" from="  0:13.877" to="  0:17.517" allWordsNum="9"/>
			<subrecord rec_id="3" rec_time="8" name="Water was pouring into the washbasin and vanishing down the drain." sound="nj_08b_02.mp3" from="    0:17.772" to="   0:23.431" allWordsNum="11"/>
			</record>
		  <record rec_id="1" rec_time="25" sound="nj_08b_02.mp3">
		  <subrecord rec_id="4" rec_time="5" name="'Turn that tap off, 'a voice said loudly." sound="nj_08b_02.mp3" from="  0:23.945" to="  0:28.018" allWordsNum="8"/>
			<subrecord rec_id="5" rec_time="6" name="Daisy froze. She looked around, but saw no one." sound="nj_08b_02.mp3" from="  0:28.661" to="  0:33.806" allWordsNum="9"/>
			<subrecord rec_id="6" rec_time="3" name="'Turn that tap off." sound="nj_08b_02.mp3" from="  0:33.977" to="  0:35.863" allWordsNum="4"/>
			<subrecord rec_id="7" rec_time="3" name="You're wasting water!'" sound="nj_08b_02.mp3" from="  0:35.949" to="  0:37.835" allWordsNum="3"/>
			<subrecord rec_id="8" rec_time="3" name="The voice sounded impatient." sound="nj_08b_02.mp3" from="  0:38.264" to="  0:40.622" allWordsNum="4"/>
			</record>
		  <record rec_id="2" rec_time="25" sound="nj_08b_02.mp3">
		  <subrecord rec_id="9" rec_time="3" name="This time Daisy obeyed." sound="nj_08b_02.mp3" from="  0:41.651" to="  0:43.794" allWordsNum="4"/>
			<subrecord rec_id="10" rec_time="7" name="'Who…who are you?' Daisy's voice was faint." sound="nj_08b_02.mp3" from="  0:44.223" to="  0:48.724" allWordsNum="4"/>
			</record>
		  <record rec_id="3" rec_time="25" sound="nj_08b_02.mp3">
		  <subrecord rec_id="11" rec_time="10" name="'I'm a drop of water. It's not easy for me to get here. Do you know where I'm from?'" sound="nj_08b_02.mp3" from="  0:49.153" to="  0:56.398" allWordsNum="19"/>
			<subrecord rec_id="12" rec_time="5" name="'From the tap, I suppose,' said Daisy." sound="nj_08b_02.mp3" from="  0:56.913" to="  1:00.985" allWordsNum="7"/>
			</record>
		  <record rec_id="4" rec_time="60" sound="nj_08b_02.mp3">
			<subrecord rec_id="13" rec_time="15" name="'Yes, but before that?' Water said, 'A few days ago, I was floating comfortably in a cloud in Jiangxi, enjoying the view." sound="nj_08b_02.mp3" from="  1:01.342" to="  1:12.636" allWordsNum="22"/>
		  <subrecord rec_id="14" rec_time="10" name="Then the cloud dropped me into a stream and I sped down the mountain into the Yangtze River." sound="nj_08b_02.mp3" from="   1:13.726" to="  1:21.094" allWordsNum="18"/>
			<subrecord rec_id="15" rec_time="5" name="The Yangtze River carried me to a lake." sound="nj_08b_02.mp3" from="  1:22.039" to="  1:25.093" allWordsNum="8"/>
			<subrecord rec_id="16" rec_time="8" name="I relaxed there for a few days, and then I travelled a long way and ran into the Huangpu River." sound="nj_08b_02.mp3" from="  1:26.207" to="  1:33.848" allWordsNum="20"/>
			<subrecord rec_id="17" rec_time="3" name="Then it was time to get cleaned up.'" sound="nj_08b_02.mp3" from="  1:34.247" to="  1:36.813" allWordsNum="8"/>
			</record>
		  <record rec_id="5" rec_time="35" sound="nj_08b_02.mp3">			
			<subrecord rec_id="18" rec_time="7" name="'Cleaned up?' Daisy sounded puzzled." sound="nj_08b_02.mp3" from="  1:37.611" to="  1:41.488" allWordsNum="5"/>
			<subrecord rec_id="19" rec_time="8" name="'Yes. I was dirty after my journey so they took me to a water treatment works." sound="nj_08b_02.mp3" from="  1:42.058" to="  1:49.414" allWordsNum="16"/>
			<subrecord rec_id="20" rec_time="6" name="They gave me a thorough cleaning and added a few chemicals to me. " sound="nj_08b_02.mp3" from="  1:49.642" to="  1:54.659" allWordsNum="13"/>
			<subrecord rec_id="21" rec_time="10" name="Then I travelled in the pipes under the streets. I waited there until you called me , and here I am.'" sound="nj_08b_02.mp3" from="  1:55.287" to="  2:04.523" allWordsNum="20"/>
			</record>
		  <record rec_id="6" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="22" rec_time="5" name="Daisy said, 'So this is the end of your journey.'" sound="nj_08b_02.mp3" from="  2:05.379" to="  2:10.111" allWordsNum="10"/>
			</record>
		  <record rec_id="7" rec_time="25" sound="nj_08b_02.mp3">			
			<subrecord rec_id="23" rec_time="6" name="'No. When you've finished with me, I'll go to a sewage plant." sound="nj_08b_02.mp3" from="   2:10.681" to="  2:16.668" allWordsNum="12"/>
			<subrecord rec_id="24" rec_time="6" name="Then they'll pump me into the river and I'll be back in the sea again.'" sound="nj_08b_02.mp3" from="  2:16.678" to="  2:21.823" allWordsNum="15"/>
			</record>
		  <record rec_id="8" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="25" rec_time="3" name="'Again?'" sound="nj_08b_02.mp3" from="  2:21.994" to="  2:23.152" allWordsNum="1"/>
			</record>
		  <record rec_id="9" rec_time="25" sound="nj_08b_02.mp3">  	
	  	<subrecord rec_id="26" rec_time="5" name="'Yes. That's where I came from in the first place." sound="nj_08b_02.mp3" from="   2:23.709" to=" 2:28.167" allWordsNum="10"/>
			<subrecord rec_id="27" rec_time="4" name="Remember not to waste me or pollute me." sound="nj_08b_02.mp3" from="  2:28.682" to="  2:31.511" allWordsNum="8"/>
			<subrecord rec_id="28" rec_time="5" name="I'm precious, like liquid gold. See you.'" sound="nj_08b_02.mp3" from="  2:32.111" to="  2:36.827" allWordsNum="7"/>
			</record>
		  <record rec_id="10" rec_time="25" sound="nj_08b_02.mp3">			
			<subrecord rec_id="29" rec_time="5" name="'Wait a minute. What do you mean by liquid gold?'" sound="nj_08b_02.mp3" from="  2:37.385" to="  2:41.543" allWordsNum="10"/>
			<subrecord rec_id="30" rec_time="5" name="But there was no reply. The water had gone." sound="nj_08b_02.mp3" from="  2:41.929" to="   2:46.173" allWordsNum="9"/>
			</record>
		  <record rec_id="11" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="31" rec_time="10" name="Daisy came out of the bathroom. Her brother said, 'Who were you talking to?'" sound="nj_08b_02.mp3" from="  2:47.073" to="  2:53.933" allWordsNum="14"/>
			</record>
		  <record rec_id="12" rec_time="25" sound="nj_08b_02.mp3">		
			<subrecord rec_id="32" rec_time="5" name="'I was talking to the water,' Daisy said." sound="nj_08b_02.mp3" from="  2:54.661" to="   2:57.962" allWordsNum="8"/>
			</record>
		  <record rec_id="13" rec_time="25" sound="nj_08b_02.mp3">		
			<subrecord rec_id="33" rec_time="12" name="'Sometimes you're strange, Daisy,' her brother said." sound="nj_08b_02.mp3" from=" 2:58.305" to=" 3:02.378" allWordsNum="7"/>
			</record>
			<exercise type="4" index="0"/>
		</part>
		<part part_index="1" name="More information about water" page="27">
			<record rec_id="0" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="1" rec_time="8" name="The oceans cover 2/3 of the Earth, but ocean water is salty." sound="nj_08b_02.mp3" from="   8:07.468" to="   8:12.469" allWordsNum="12"/>
			<subrecord rec_id="2" rec_time="7" name="That is to say, most of the water on the Earth is not drinkable!" sound="nj_08b_02.mp3" from="   8:12.744" to="   8:16.998" allWordsNum="14"/>
			</record>
		  <record rec_id="2" rec_time="35" sound="nj_08b_02.mp3">			
			<subrecord rec_id="3" rec_time="10" name="90% of all the water on the Earth that human beings can drink right now is underground." sound="nj_08b_02.mp3" from=" 8:17.446" to=" 8:24.078" allWordsNum="17"/>
			<subrecord rec_id="4" rec_time="5" name="It is very easy to pollute groundwater." sound="nj_08b_02.mp3" from=" 8:24.688" to=" 8:27.492" allWordsNum="7"/>
			<subrecord rec_id="5" rec_time="20" name="For example, 4.5 litres of paint or about 1 litre of motor oil can seep into the Earth and pollute 1,125,000 litres of drinking water!" sound="nj_08b_02.mp3" from="   8:28.125" to="   8:43.022" allWordsNum="25"/>
			</record>
		  <record rec_id="3" rec_time="35" sound="nj_08b_02.mp3">
			<subrecord rec_id="6" rec_time="15" name="A leak that fills up a coffee cup in 10 minutes will waste over 13,500 litres of water in a year. " sound="nj_08b_02.mp3" from="8:43.976" to="8:53.815" allWordsNum="21"/>
			<subrecord rec_id="7" rec_time="4" name="How much water is that?" sound="nj_08b_02.mp3" from=" 8:54.793" to="  8:57.023" allWordsNum="5"/>
			<subrecord rec_id="8" rec_time="12" name="You would have to drink 65 glasses of water every day for a year to get that much water!" sound="nj_08b_02.mp3" from="  8:57.252" to="9:05.149" allWordsNum="19"/>
			</record>
		  <record rec_id="4" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="9" rec_time="10" name="If you leave the water running while you brush your teeth, you might waste 22.5 litres of water. " sound="nj_08b_02.mp3" from="9:05.437" to=" 9:13.000" allWordsNum="18"/>
			<subrecord rec_id="10" rec_time="7" name="That is enough to fill 65 cans of soft drink!" sound="nj_08b_02.mp3" from="9:13.173" to=" 9:17.345" allWordsNum="10"/>
			</record>
		  <record rec_id="5" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="11" rec_time="15" name="If you leave the water running while you wash the dishes, you might waste 135 litres of water——enough to wash a whole car!" sound="nj_08b_02.mp3" from="  9:17.978" to="  9:28.518" allWordsNum="24"/>
			</record>
		  <record rec_id="6" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="12" rec_time="8" name="Believe it or not, the water we flush down our toilets starts as fresh water!" sound="nj_08b_02.mp3" from=" 9:28.898" to="9:34.519" allWordsNum="15"/>
			<subrecord rec_id="13" rec_time="10" name="Each time you flush, your toilet uses about 9 to 15 litres of water. But it does not have to!" sound="nj_08b_02.mp3" from="9:34.944" to=" 9:42.749" allWordsNum="20"/>
			</record>
		  <record rec_id="7" rec_time="25" sound="nj_08b_02.mp3">
		  <subrecord rec_id="14" rec_time="5" name="A shower usually takes at least 5 minutes." sound="nj_08b_02.mp3" from="  9:43.002" to="  9:46.899" allWordsNum="8"/>
			<subrecord rec_id="15" rec_time="12" name="So every day, you could use 112.5 litres of water taking one shower." sound="nj_08b_02.mp3" from=" 9:47.255" to=" 9:54.324" allWordsNum="13"/>
			<subrecord rec_id="16" rec_time="8" name="In a year, that is almost 45,000 litres of water!" sound="nj_08b_02.mp3" from="   9:54.681" to=" 9:59.405" allWordsNum="10"/>
			</record>
		  <record rec_id="8" rec_time="25" sound="nj_08b_02.mp3">
			<subrecord rec_id="17" rec_time="8" name="A bath uses even more water than a shower——about twice as much." sound="nj_08b_02.mp3" from=" 9:59.934" to=" 10:05.026" allWordsNum="13"/>
			<subrecord rec_id="18" rec_time="6" name="A bath can easily use 225 litres of water." sound="nj_08b_02.mp3" from=" 10:05.543" to=" 10:10.038" allWordsNum="9"/>
			</record>
			<exercise type="4" index="0"/>
		</part>
		<part part_index="2" name="Water-storing Himalaya Tower" page="0" source="2">
			<record rec_id="0" rec_time="14" sound="8B Unit 2.mp3">
				<subrecord rec_id="1" rec_time="6" name="If you have at least one full glass of clean drinking water, you are lucky. " sound="8B Unit 2.mp3" from="  0:05.891" to="  0:11.015" allWordsNum="15"/>
				<subrecord rec_id="2" rec_time="8" name="According to the World Water Council, one out of six people in the world do not have clean water to drink. " sound="8B Unit 2.mp3" from="  0:11.409" to="  0:18.503" allWordsNum="21"/>
			</record>
			<record rec_id="1" rec_time="12" sound="8B Unit 2.mp3">
				<subrecord rec_id="3" rec_time="8" name="Based on Wikipedia about 40 percent of the world's fresh water is stored within 55,000 glaciers. " sound="8B Unit 2.mp3" from="  0:19.993" to="  0:27.409" allWordsNum="16"/>
				<subrecord rec_id="4" rec_time="4" name="These glaciers are located high in the Himalayan Mountains. " sound="8B Unit 2.mp3" from="  0:27.768" to="  0:31.709" allWordsNum="9"/>
			</record>
			<record rec_id="2" rec_time="14" sound="8B Unit 2.mp3">
				<subrecord rec_id="5" rec_time="9" name="Lately, however, the Himalayan glaciers and those in other parts of the world have been decreasing because of global warming. " sound="8B Unit 2.mp3" from="  0:33.214" to="  0:42.064" allWordsNum="20"/>
				<subrecord rec_id="6" rec_time="5" name="And the glaciers are estimated to disappear by the year 2162. " sound="8B Unit 2.mp3" from="  0:42.422" to="  0:47.044" allWordsNum="11"/>
			</record>
			<record rec_id="3" rec_time="3" sound="8B Unit 2.mp3">
				<subrecord rec_id="7" rec_time="3" name="The question is: how do we get the water out? " sound="8B Unit 2.mp3" from="  0:48.477" to="  0:51.308" allWordsNum="10"/>
			</record>
