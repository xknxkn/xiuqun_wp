		<part part_index="0" name="A dangerous servant" page="33">
			<record rec_id="0" rec_time="25" sound="nj_08b_03.mp3">
			<subrecord rec_id="1" rec_time="10" name="One evening, Daisy said, 'I'm going to buy a packet of sweets. Does anyone want anything?'" sound="nj_08b_03.mp3" from="  0:12.243" to="  0:20.222" allWordsNum="16"/>	
			<subrecord rec_id="2" rec_time="10" name="Benny, Daisy's brother, said, 'Yes. Can you get me a packet of electricity, please?'" sound="nj_08b_03.mp3" from="  0:21.136" to="  0:28.188" allWordsNum="14"/>	
			</record>
			<record rec_id="1" rec_time="35" sound="nj_08b_03.mp3">
			<subrecord rec_id="3" rec_time="10" name="Daisy said,'OK,' and went out. Benny laughed, 'Ha! Ha! I've tricked Daisy at last." sound="nj_08b_03.mp3" from="  0:28.983" to="  0:37.891" allWordsNum="15"/>	
			<subrecord rec_id="4" rec_time="10" name="She doesn't even know what electricity is." sound="nj_08b_03.mp3" from="  0:37.891" to="  0:40.860" allWordsNum="7"/>	
			<subrecord rec_id="5" rec_time="7" name="She thinks that she can buy it in packets, like sweets! She'll really look foolish.'" sound="nj_08b_03.mp3" from="  0:41.072" to="  0:47.435" allWordsNum="15"/>	
			</record>
			<record rec_id="2" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="6" rec_time="5" name="Mum said, 'Do you know what electricity is?'" sound="nj_08b_03.mp3" from="  0:48.389" to="  0:51.888" allWordsNum="8"/>	
			<subrecord rec_id="7" rec_time="6" name="Benny said, 'Yes. Electricity flows through a wire." sound="nj_08b_03.mp3" from="  0:52.790" to="  0:57.986" allWordsNum="8"/>	
			<subrecord rec_id="8" rec_time="6" name="A meter measures the amount you use, and you get a bill for it monthly." sound="nj_08b_03.mp3" from="  0:58.251" to="  1:02.811" allWordsNum="15"/>	
			<subrecord rec_id="9" rec_time="5" name="It's like water, in a way.'" sound="nj_08b_03.mp3" from="  1:03.129" to="  1:05.674" allWordsNum="6"/>	
			</record>
			<record rec_id="3" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="10" rec_time="10" name="'That's not a bad explanation,' said Dad, 'although electricity is much more dangerous than water. " sound="nj_08b_03.mp3" from="  1:06.787" to="  1:13.945" allWordsNum="15"/>	
			<subrecord rec_id="11" rec_time="5" name="Electricity is a good servant, but a dangerous one." sound="nj_08b_03.mp3" from="  1:14.529" to="  1:18.717" allWordsNum="9"/>	
			<subrecord rec_id="12" rec_time="3" name="You must always be careful with it." sound="nj_08b_03.mp3" from="  1:19.142" to="  1:21.050" allWordsNum="7"/>	
			<subrecord rec_id="13" rec_time="5" name="Can you tell me what it looks like?" sound="nj_08b_03.mp3" from="  1:22.005" to="  1:24.338" allWordsNum="8"/>	
			<subrecord rec_id="14" rec_time="5" name="Benny scratched his head." sound="nj_08b_03.mp3" from="  1:24.974" to="  1:26.989" allWordsNum="4"/>	
			</record>
			<record rec_id="4" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="15" rec_time="5" name="Dad said, 'Nobody's ever seen electricity." sound="nj_08b_03.mp3" from="  1:27.784" to="  1:32.397" allWordsNum="6"/>	
			<subrecord rec_id="16" rec_time="10" name=" It's invisible. But we can change it into different forms of energy that we can see, hear of feel." sound="nj_08b_03.mp3" from="  1:32.609" to="  1:40.615" allWordsNum="19"/>	
			<subrecord rec_id="17" rec_time="5" name=" Can you think of an example?'" sound="nj_08b_03.mp3" from="  1:41.517" to="  1:43.585" allWordsNum="6"/>	
			<subrecord rec_id="18" rec_time="5" name="Benny said, 'Light! The light in a light bulb.'" sound="nj_08b_03.mp3" from="  1:44.751" to="  1:49.099" allWordsNum="9"/>	
			<subrecord rec_id="19" rec_time="8" name="Mum said, 'That's right. Do you know where electricity comes from?'" sound="nj_08b_03.mp3" from="  1:50.159" to="  1:55.408" allWordsNum="11"/>	
			</record>
			<record rec_id="5" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="20" rec_time="10" name="Benny said, 'Well, it comes into our flat through thin wires, and these are connected to thick wires that are buried under the street.'" sound="nj_08b_03.mp3" from="  1:56.416" to="  2:06.172" allWordsNum="24"/>	
			<subrecord rec_id="21" rec_time="10" name="'We call the thick wires cables,' said Dad. 'What are they connected to?'" sound="nj_08b_03.mp3" from="  2:06.755" to="  2:13.595" allWordsNum="13"/>	
			<subrecord rec_id="22" rec_time="5" name="'A power station.' said Benny." sound="nj_08b_03.mp3" from="  2:14.019" to="  2:17.837" allWordsNum="5"/>	
			<subrecord rec_id="23" rec_time="12" name="Daisy then came back. Benny asked politely, 'May I have my packet of electricity, please?' There was a grin on his face." sound="nj_08b_03.mp3" from="  2:18.950" to="  2:29.501" allWordsNum="22"/>	
			<subrecord rec_id="24" rec_time="5" name="'Yes, you may.' said Daisy." sound="nj_08b_03.mp3" from="  2:29.979" to="  2:33.266" allWordsNum="5"/>	
			<subrecord rec_id="25" rec_time="5" name="'Here it is.' Benny said." sound="nj_08b_03.mp3" from="  2:33.160" to="  2:36.659" allWordsNum="5"/>	
			<subrecord rec_id="26" rec_time="5" name="'But these are batteries!' Daisy said, " sound="nj_08b_03.mp3" from="  2:36.712" to="  2:40.795" allWordsNum="6"/>	
			</record>
			<record rec_id="6" rec_time="25" sound="nj_08b_03.mp3">
			<subrecord rec_id="27" rec_time="3" name="'That's right.'" sound="nj_08b_03.mp3" from="  2:40.954" to="  2:42.227" allWordsNum="2"/>	
			<subrecord rec_id="28" rec_time="5" name="'But ... but ...,' said Benny." sound="nj_08b_03.mp3" from="  2:42.916" to="  2:47.900" allWordsNum="4"/>	
			</record>
			<record rec_id="7" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="29" rec_time="6" name="'Daisy's right,' said Dad. 'They're packets that contain electricity." sound="nj_08b_03.mp3" from="  2:48.271" to="  2:54.422" allWordsNum="9"/>	
			<subrecord rec_id="30" rec_time="5" name="The chemicals  inside produce electricity.'" sound="nj_08b_03.mp3" from="  2:54.475" to="  2:58.027" allWordsNum="5"/>	
			<subrecord rec_id="31" rec_time="5" name="Daisy asked, 'Didn't you know that, Benny?'" sound="nj_08b_03.mp3" from="  2:58.663" to="  3:02.958" allWordsNum="7"/>	
			<subrecord rec_id="32" rec_time="5" name="Mum said, 'Who's looking foolish now, Benny?'" sound="nj_08b_03.mp3" from="  3:03.594" to="  3:07.783" allWordsNum="7"/>	
			</record>
			<exercise type="4" index="0"/>
			</part>
		<part part_index="1" name="Electricity works everywhere" page="46">
			<record rec_id="0" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="1" rec_time="5" name="Almost everyone today uses electricity in one way or another." sound="nj_08b_03.mp3" from="  6:07.792" to="  6:12.723" allWordsNum="10"/>	
			<subrecord rec_id="2" rec_time="5" name="It is hard to imagine what life in our cities would be like without it." sound="nj_08b_03.mp3" from="  6:12.988" to="  6:18.025" allWordsNum="15"/>	
			<subrecord rec_id="3" rec_time="7" name="Electricity lights streets and buildings, and warms people and animals." sound="nj_08b_03.mp3" from="  6:18.502" to="  6:24.865" allWordsNum="10"/>	
			<subrecord rec_id="4" rec_time="7" name="It heats food in cookers and cools it in refrigerators." sound="nj_08b_03.mp3" from="  6:25.289" to="  6:30.644" allWordsNum="10"/>	
			</record>
			<record rec_id="1" rec_time="60" sound="nj_08b_03.mp3">
			<subrecord rec_id="5" rec_time="5" name="It drives trains and works traffic lights and lifts." sound="nj_08b_03.mp3" from="  6:31.493" to="  6:36.053" allWordsNum="9"/>	
			<subrecord rec_id="6" rec_time="5" name="It also works the machines in factories that make all kinds of goods." sound="nj_08b_03.mp3" from="  6:36.636" to="  6:42.044" allWordsNum="13"/>	
			<subrecord rec_id="7" rec_time="12" name="Everyday wonders such as computers and televisions use electricity to bring entertainment and news to millions of families." sound="nj_08b_03.mp3" from="  6:42.786" to="  6:52.808" allWordsNum="18"/>	
			<subrecord rec_id="8" rec_time="6" name="In villages and on farms, electrical machines milk the cows and chop their food." sound="nj_08b_03.mp3" from="  6:54.133" to="  7:00.920" allWordsNum="14"/>	
			</record>
			<record rec_id="2" rec_time="25" sound="nj_08b_03.mp3">
			<subrecord rec_id="9" rec_time="5" name="They also cool the milk and churn the butter." sound="nj_08b_03.mp3" from="  7:01.556" to="  7:05.215" allWordsNum="9"/>	
			<subrecord rec_id="10" rec_time="8" name="Indeed, electricity finds as much work to do in the countryside as it does in the cities." sound="nj_08b_03.mp3" from="  7:06.010" to="  7:13.168" allWordsNum="17"/>	
			</record>
