		<part part_index="0" name="Travelling by bus" page="46">
			<record rec_id="0" rec_time="60" sound="nj_06b_07.mp3">
			<subrecord rec_id="1" rec_time="5" name="Many people like travelling by bus. " sound="nj_06b_07.mp3" from="  1:28.905" to="  1:31.487" allWordsNum="6"/>
			<subrecord rec_id="2" rec_time="6" name="In the past, all passengers had to buy tickets from a bus conductor. " sound="nj_06b_07.mp3" from="  1:32.348" to="  1:37.034" allWordsNum="13"/>
			<subrecord rec_id="3" rec_time="8" name="He or she collected money from the passengers and put it in a bag. " sound="nj_06b_07.mp3" from="  1:37.847" to="  1:42.342" allWordsNum="14"/>
			<subrecord rec_id="4" rec_time="8" name="Nowadays, on many buses passengers do not have to buy tickets from a bus conductor. " sound="nj_06b_07.mp3" from="  1:42.964" to="  1:48.989" allWordsNum="15"/>
			<subrecord rec_id="5" rec_time="8" name="They put their money in a fare box or use a public transportation card instead. " sound="nj_06b_07.mp3" from="  1:49.371" to="  1:54.823" allWordsNum="15"/>
			</record>
			<record rec_id="1" rec_time="35" sound="nj_06b_07.mp3">
			<subrecord rec_id="6" rec_time="5" name="In the past, there were only single-decker buses. " sound="nj_06b_07.mp3" from="  1:55.972" to="  1:59.750" allWordsNum="9"/>
			<subrecord rec_id="7" rec_time="5" name="Nowadays, some buses are double-decker buses. " sound="nj_06b_07.mp3" from="  2:00.228" to="  2:04.053" allWordsNum="7"/>
			<subrecord rec_id="8" rec_time="5" name="In the past, there were no air-conditioned buses. " sound="nj_06b_07.mp3" from="  2:04.627" to="  2:08.405" allWordsNum="9"/>
			<subrecord rec_id="9" rec_time="5" name="Nowadays, most of them are air-conditioned. " sound="nj_06b_07.mp3" from="  2:08.979" to="  2:12.422" allWordsNum="7"/>
			</record>
			<record rec_id="2" rec_time="35" sound="nj_06b_07.mp3">
			<subrecord rec_id="10" rec_time="5" name="In the past, none of the bus drivers were women. " sound="nj_06b_07.mp3" from="  2:13.904" to="  2:17.491" allWordsNum="10"/>
			<subrecord rec_id="11" rec_time="5" name="All of them were men. " sound="nj_06b_07.mp3" from="  2:18.017" to="  2:19.451" allWordsNum="5"/>
			<subrecord rec_id="12" rec_time="5" name="Nowadays, some of the bus drivers are women, but most of them are still men. " sound="nj_06b_07.mp3" from="  2:20.264" to="  2:26.385" allWordsNum="15"/>
