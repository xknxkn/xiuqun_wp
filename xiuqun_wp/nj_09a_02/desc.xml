	<texts>
		<part part_index="0" name="Reading" page="20">
			<record rec_id="0" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="1" rec_time="12" name="Damin sits on the side of the river cooking a meal,with a large bird on his head. " sound="nj_09a_02.mp3" from="  0:00.474" to="  0:06.638" allWordsNum="18"/>
				<subrecord rec_id="2" rec_time="10" name="The bird is a cormorant,and Damin is a fisherman. " sound="nj_09a_02.mp3" from="  0:06.835" to="  0:11.419" allWordsNum="10"/>
				<subrecord rec_id="3" rec_time="6" name="He is over 65 now but still works every day. " sound="nj_09a_02.mp3" from="  0:11.695" to="  0:15.251" allWordsNum="10"/>
				<subrecord rec_id="4" rec_time="10" name="He is thin,and of average height,but he is very fit. " sound="nj_09a_02.mp3" from="  0:15.409" to="  0:19.519" allWordsNum="12"/>
				<subrecord rec_id="5" rec_time="14" name="Although he is an elderly man,he is strong enough to control his raft in the river where he lives and works with his cormorants. " sound="nj_09a_02.mp3" from="  0:19.756" to="  0:27.500" allWordsNum="25"/>
			</record>
			<record rec_id="1" rec_time="60" sound="nj_09a_02.mp3">	
				<subrecord rec_id="6" rec_time="6" name="Cormorants are large black birds. " sound="nj_09a_02.mp3" from="  0:28.448" to="  0:31.807" allWordsNum="5"/>
				<subrecord rec_id="7" rec_time="10" name="They are good at catching fish because they can swim well underwater. " sound="nj_09a_02.mp3" from="  0:31.925" to="  0:36.667" allWordsNum="13"/>
			  <subrecord rec_id="8" rec_time="8" name="Their large feet are used to push them quickly through the water. " sound="nj_09a_02.mp3" from="  0:36.944" to="  0:41.132" allWordsNum="12"/>
				<subrecord rec_id="9" rec_time="10" name="They can dive down 25 metres,and stay underwater for up to two minutes. " sound="nj_09a_02.mp3" from="  0:41.329" to="  0:46.466" allWordsNum="15"/>
			</record>
			<record rec_id="2" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="10" rec_time="15" name="Damin does not require nets or a fishing rod to catch fish. It is done for him by his 12 cormorants. " sound="nj_09a_02.mp3" from="  0:47.177" to="  0:52.116" allWordsNum="21"/>
				<subrecord rec_id="12" rec_time="7" name="Damin's fishing trips often begin in the late afternoon. " sound="nj_09a_02.mp3" from="  0:55.672" to="  0:59.031" allWordsNum="9"/>
				<subrecord rec_id="13" rec_time="7" name="He sets off on his bamboo raft with his birds. " sound="nj_09a_02.mp3" from="  0:59.268" to="  1:02.390" allWordsNum="10"/>
				<subrecord rec_id="14" rec_time="7" name="When he reaches the right place, he stops. " sound="nj_09a_02.mp3" from="  1:02.350" to="  1:05.471" allWordsNum="8"/>
				<subrecord rec_id="15" rec_time="10" name="He ties a piece of grass around the neck of each bird,so that it cannot swallow the fish. " sound="nj_09a_02.mp3" from="  1:05.669" to="  1:10.529" allWordsNum="19"/>
			</record>
			<record rec_id="3" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="16" rec_time="12" name="Then he pushes the birds into the water, and jumps up and down and bangs the water with his pole. " sound="nj_09a_02.mp3" from="  1:10.806" to="  1:16.732" allWordsNum="20"/>
				<subrecord rec_id="17" rec_time="3" name="The fish are frightened by this. " sound="nj_09a_02.mp3" from="  1:17.049" to="  1:19.024" allWordsNum="6"/>
				<subrecord rec_id="18" rec_time="7" name="At night a light is hung from the front of the raft. " sound="nj_09a_02.mp3" from="  1:19.182" to="  1:23.173" allWordsNum="12"/>
				<subrecord rec_id="19" rec_time="8" name="This enables Damin to see better,and also attracts the fish. " sound="nj_09a_02.mp3" from="  1:23.213" to="  1:27.796" allWordsNum="11"/>
			</record>
			<record rec_id="4" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="20" rec_time="10" name="The cormorants swim down and catch the fish,and bring them back to the raft. " sound="nj_09a_02.mp3" from="  1:27.875" to="  1:32.774" allWordsNum="15"/>
				<subrecord rec_id="21" rec_time="12" name="The fish are then removed from the bird's mouths by Damin and thrown into a big basket. " sound="nj_09a_02.mp3" from="  1:32.972" to="  1:38.385" allWordsNum="17"/>
				<subrecord rec_id="22" rec_time="12" name="Later some of the fish are sold,and the rest are divided between Damin's family and the cormorants. " sound="nj_09a_02.mp3" from="  1:38.780" to="  1:45.023" allWordsNum="18"/>
			</record>
			<record rec_id="5" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="23" rec_time="12" name="Cormorant fishing is a traditional Chinese skill,probably more than a thousand years old. " sound="nj_09a_02.mp3" from="  1:46.643" to="  1:52.570" allWordsNum="14"/>
				<subrecord rec_id="24" rec_time="12" name="Damin enjoys his work,and he is teaching his grandson everything he knows. " sound="nj_09a_02.mp3" from="  1:52.768" to="  1:57.904" allWordsNum="13"/>
				<subrecord rec_id="25" rec_time="12" name="However,few young people are interested in doing this type of work in the modern world. " sound="nj_09a_02.mp3" from="  1:58.102" to="  2:03.515" allWordsNum="16"/>
				<subrecord rec_id="26" rec_time="12" name="In 50 years,perhaps there will be no more cormorant fishermen in the world. " sound="nj_09a_02.mp3" from="  2:03.673" to="  2:08.810" allWordsNum="14"/>
			</record>
