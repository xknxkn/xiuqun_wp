		<part part_index="1" name="Some facts about tea" page="30">
			<record rec_id="0" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="1" rec_time="10" name="Tea is the most popular drink in the world besides water. " sound="nj_09a_02.mp3" from="  2:08.928" to="  2:13.591" allWordsNum="12"/>
				<subrecord rec_id="2" rec_time="6" name="There are thousands of different types of tea. " sound="nj_09a_02.mp3" from="  2:13.630" to="  2:16.910" allWordsNum="8"/>
				<subrecord rec_id="3" rec_time="5" name="All tea comes from the tea plant. " sound="nj_09a_02.mp3" from="  2:16.989" to="  2:19.557" allWordsNum="7"/>
				<subrecord rec_id="4" rec_time="12" name="The leaves and buds of this plant are picked several times a year, usually by hand. " sound="nj_09a_02.mp3" from="  2:19.636" to="  2:25.089" allWordsNum="16"/>
			  <subrecord rec_id="5" rec_time="14" name="After it has been picked, the tea is processed into black tea, oolong tea, green tea or white tea. " sound="nj_09a_02.mp3" from="  2:25.326" to="  2:33.228" allWordsNum="16"/>
			</record>
			<record rec_id="1" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="6" rec_time="16" name="Black tea was invented in China during the Ming Dynasty as a way to keep tea fresh when it was transported long distances. " sound="nj_09a_02.mp3" from="  2:33.505" to="  2:41.328" allWordsNum="24"/>
				<subrecord rec_id="7" rec_time="20" name="As tea has to travel a long distance to reach places such as the UK, Canada and Australia, it is not surprising that Westerners drink mostly black tea. " sound="nj_09a_02.mp3" from="2:41.526" to="  2:51.483" allWordsNum="27"/>
				<subrecord rec_id="8" rec_time="7" name="However, the majority of the world drinks green tea. " sound="nj_09a_02.mp3" from="  2:51.681" to="  2:55.395" allWordsNum="9"/>
				</record>
			<record rec_id="2" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="9" rec_time="12" name="Herbal tea is prepared in the same way as regular tea but is not real tea. " sound="nj_09a_02.mp3" from="  2:56.383" to="  3:02.665" allWordsNum="16"/>
				<subrecord rec_id="10" rec_time="12" name="This is because it contains herbs, fruits, spices, etc.,instead of leaves from the tea plant. " sound="nj_09a_02.mp3" from="  3:02.705" to="  3:09.303" allWordsNum="16"/>
				<subrecord rec_id="11" rec_time="8" name="To truly be tea, the leaves must come from this plant. " sound="nj_09a_02.mp3" from="  3:09.580" to="  3:14.163" allWordsNum="11"/>
			</record>
			<record rec_id="3" rec_time="60" sound="nj_09a_02.mp3">
				<subrecord rec_id="12" rec_time="10" name="All tea naturally contains caffeine, which comes from the tea leaves. " sound="nj_09a_02.mp3" from="  3:14.598" to="  3:20.051" allWordsNum="11"/>
				<subrecord rec_id="13" rec_time="12" name="Decaffeinated tea is regular tea (usually green or black) that has been processed to remove the caffeine. " sound="nj_09a_02.mp3" from="  3:20.110" to="  3:27.062" allWordsNum="17"/>
				<subrecord rec_id="14" rec_time="6" name="In recent years, organic tea has become popular too. " sound="nj_09a_02.mp3" from="  3:27.448" to="  3:31.102" allWordsNum="9"/>
				<subrecord rec_id="15" rec_time="10" name="This is tea that comes from plants that have been grown without the use of any chemicals. " sound="nj_09a_02.mp3" from="  3:31.459" to="  3:36.331" allWordsNum="17"/>
			</record>
			<record rec_id="4" rec_time="25" sound="nj_09a_02.mp3">
				<subrecord rec_id="16" rec_time="12" name="People believe that it tastes better and is healthier but sometimes it costs more than non-organic tea. " sound="nj_09a_02.mp3" from="  3:36.676" to="  3:43.568" allWordsNum="18"/>
				<subrecord rec_id="17" rec_time="6" name="This is because the size of the crops is often smaller. " sound="nj_09a_02.mp3" from="  3:43.776" to="  3:46.836" allWordsNum="11"/>
			</record>
