		<part part_index="0" name="Writing" page="80">
			<record rec_id="0" rec_time="5" sound="nj_07a_10.mp3">
			<subrecord rec_id="1" rec_time="3" name="Dear Lucy." sound="nj_07a_10.mp3" from="  4:15.694" to="  4:17.343" allWordsNum="2"/>	
			</record>
			<record rec_id="1" rec_time="25" sound="nj_07a_10.mp3">
			<subrecord rec_id="2" rec_time="4" name="Last Saturday was Ben's birthday." sound="nj_07a_10.mp3" from="  4:17.848" to="  4:20.474" allWordsNum="5"/>
			<subrecord rec_id="3" rec_time="5" name="We had a birthday party for him." sound="nj_07a_10.mp3" from="  4:20.676" to="  4:23.370" allWordsNum="7"/>
			<subrecord rec_id="4" rec_time="10" name="Our friends Peter, Tom and Alice came to my flat at three o'clock in the afternoon." sound="nj_07a_10.mp3" from="  4:23.605" to="  4:29.766" allWordsNum="16"/>
			<subrecord rec_id="5" rec_time="5" name="We had a lot of delicious food and drink." sound="nj_07a_10.mp3" from="  4:30.002" to="  4:33.031" allWordsNum="9"/>
			</record>
			<record rec_id="2" rec_time="25" sound="nj_07a_10.mp3">
			<subrecord rec_id="6" rec_time="4" name="First, we watched some cartoons." sound="nj_07a_10.mp3" from="  4:33.536" to="  4:36.230" allWordsNum="5"/>
			<subrecord rec_id="7" rec_time="5" name="Next, we sang a birthday song to Ben and gave him presents." sound="nj_07a_10.mp3" from="  4:36.364" to="  4:40.101" allWordsNum="12"/>
			<subrecord rec_id="8" rec_time="4" name="My present to Ben was a chocolate cake." sound="nj_07a_10.mp3" from="  4:40.707" to="  4:43.266" allWordsNum="8"/>
			<subrecord rec_id="9" rec_time="4" name="Mum taught me to make it." sound="nj_07a_10.mp3" from="  4:43.535" to="  4:45.622" allWordsNum="6"/>
			<subrecord rec_id="10" rec_time="4" name="After that, we had a barbecue." sound="nj_07a_10.mp3" from="  4:46.127" to="  4:48.181" allWordsNum="6"/>
			</record>
			<record rec_id="3" rec_time="10" sound="nj_07a_10.mp3">
			<subrecord rec_id="11" rec_time="5" name="Everybody enjoyed the party very much." sound="nj_07a_10.mp3" from="  4:48.248" to="  4:51.110" allWordsNum="6"/>
			<subrecord rec_id="12" rec_time="5" name="Here are some photos of the party." sound="nj_07a_10.mp3" from="  4:51.110" to="  4:53.500" allWordsNum="7"/>
			</record>
			<record rec_id="4" rec_time="5" sound="nj_07a_10.mp3">
